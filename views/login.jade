extends layout
 
block content
  div.container
    div.wrapper
        h1.text-center.login-title Logga in
          div.account-wall
            form(class='form-signin', action='/login', method='POST')
              input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
              input(type='password', name='password' class='form-control', placeholder='Password', required)
              button(class='btn', type='submit') Logga in
              span.clearfix
          a(href='/signup', class='text-center new-account') Skapa ett konto
          #message
          if message
            p.text-center.error-message #{message}